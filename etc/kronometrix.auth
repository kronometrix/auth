RETVAL=0
OS_NAME=`uname -s`

BASEDIR="/opt/kronometrix/auth/etc"
AUTH_HTTP="${BASEDIR}/kronometrix.auth-http"
AUTH_DB="${BASEDIR}/kronometrix.auth-db"
KRMX_USER="krmx"

# basedir test
test -d ${BASEDIR} || exit 0
test -f ${AUTH_HTTP} || exit 0
test -f ${AUTH_DB} || exit 0


start() {
    su - $KRMX_USER -c "${AUTH_HTTP} start >/dev/null 2>&1"
    sleep 1
    su - $KRMX_USER -c "${AUTH_DB} start >/dev/null 2>&1"
}


stop() {
    su - $KRMX_USER -c "${AUTH_HTTP} stop >/dev/null 2>&1"
    sleep 1
    su - $KRMX_USER -c "${AUTH_DB} stop >/dev/null 2>&1"
}


case "$1" in
   start)
      start
      ;;
   stop)
      stop
      ;;
   restart)
      stop
      start
      ;;
   *)
      echo "Usage: $0 {start|stop|restart}"
      exit 1
esac
exit $RETVAL
