#!/bin/sh

RC_CONF=/etc/rc.conf

if [ $2 == "PRE-INSTALL" ]; then
    if ! /usr/sbin/pw groupshow krmx >/dev/null 2>&1; then
        /usr/sbin/pw groupadd krmx -g 5000
    fi

    if ! /usr/sbin/pw usershow krmx >/dev/null 2>&1; then
        /usr/sbin/pw useradd krmx -m -d /home/krmx \
         -u 5000 -g 5000 -c "Kronometrix user"
    fi
fi

if [ $2 == "POST-INSTALL" ]; then
    chown -R krmx:krmx /opt/kronometrix/admin
    cp /opt/kronometrix/admin/etc/rc/kadmin /etc/rc.d/
    /etc/rc.d/kadmin onestart

    # install service
    grep kadmin ${RC_CONF} >/dev/null 2>&1

    if [ $? -eq 1 ]; then
        # add the service
        echo "kadmin_enable=\"YES\"" >> ${RC_CONF}
        echo "kadmin_user=\"krmx\"" >> ${RC_CONF}
        if [ $? -eq 1 ]; then
            echo "Error: cannot activate service, exit now"
            exit 1
        fi
    fi
fi

